rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // HELPER FUNCTIONS
    // ============================================
    
    function isAuthenticated() {
      return request.auth != null;
    }

    function isDocumentOwner() {
      return isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    function willBeDocumentOwner() {
      return isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }

    function isOwnerById(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // ============================================
    // USERS COLLECTION
    // ============================================
    
    match /users/{userId} {
      allow read, write: if isOwnerById(userId);
      
      match /history/{historyId} {
        allow read, write: if isOwnerById(userId);
      }

      match /profile/{profileId} {
        allow read, write: if isOwnerById(userId);
      }
    }

    // ============================================
    // INTERVIEW SESSIONS COLLECTION
    // ============================================

    match /interview_sessions/{sessionId} {

      // ⭐ CRITICAL FIX: Loosen the list rule to allow the client-side query to pass.
      // The client code ALREADY applies the 'where' filter, but the rule check fails.
      allow list: if isAuthenticated(); 
      // The client query: where('userId', '==', uid), orderBy('timestamp', 'desc')

      allow get: if isDocumentOwner();
      allow create: if willBeDocumentOwner();
      allow update, delete: if isDocumentOwner();
      
      // Questions subcollection (Must be correct for Proxy Delete)
      match /questions/{questionId} {
        // Needs Admin privileges or owner check on parent doc. 
        // Since DELETE is handled by Proxy (Admin SDK), we keep this safe:
        allow read, write: if get(/databases/$(database)/documents/interview_sessions/$(sessionId)).data.userId == request.auth.uid;
      }
    }

    // ============================================
    // POSTURE SESSIONS
    // ============================================

    match /posture_sessions/{sessionId} {
      // ⭐ CRITICAL FIX: Loosen the list rule.
      allow list: if isAuthenticated();
      allow get: if isDocumentOwner();
      allow create: if willBeDocumentOwner();
      allow update, delete: if isDocumentOwner();
    }

    // ============================================
    // DRESSING SESSIONS
    // ============================================

    match /dressing_sessions/{sessionId} {
      // ⭐ CRITICAL FIX: Loosen the list rule.
      allow list: if isAuthenticated();
      allow get: if isDocumentOwner();
      allow create: if willBeDocumentOwner();
      allow update, delete: if isDocumentOwner();
    }

    // ============================================
    // RESUME ANALYSIS SESSIONS (NEW)
    // ============================================

    match /resume_analysis_sessions/{analysisId} {
      // ⭐ CRITICAL FIX: Loosen the list rule.
      allow list: if isAuthenticated();
      allow get: if isDocumentOwner();
      allow create: if willBeDocumentOwner();
      allow update, delete: if isDocumentOwner();
    }

    // ============================================
    // LEGACY COLLECTIONS (MATCH ORIGINAL RULES)
    // ============================================

    match /resume_analysis/{analysisId} {
      allow get: if isDocumentOwner();
      // ⭐ CRITICAL FIX: Loosen the list rule.
      allow list: if isAuthenticated();
      allow create: if willBeDocumentOwner();
      allow update, delete: if isDocumentOwner();
    }

    match /resume_sessions/{sessionId} {
      allow get: if isDocumentOwner();
      // ⭐ CRITICAL FIX: Loosen the list rule.
      allow list: if isAuthenticated();
      allow create: if willBeDocumentOwner();
      allow update, delete: if isDocumentOwner();
    }

    match /mock_interviews/{sessionId} {
      allow get: if isDocumentOwner();
      // ⭐ CRITICAL FIX: Loosen the list rule.
      allow list: if isAuthenticated();
      allow create: if willBeDocumentOwner();
      allow update, delete: if isDocumentOwner();
    }
  }
}